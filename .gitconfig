[user]
	email = hi+github@berly.kim
	name = beeps
[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	st = status
[core]
	excludesfile = ~/.gitignore
	whitespace = fix,space-before-tab,tab-in-indent,trailing-space
	editor = nano
	pager = delta
[color]
	ui = auto
[merge]
	log = true
	conflictstyle = diff3
[push]
	default = matching
	followTags = true
	autoSetupRemote = true
[pull]
	rebase = true
[init]
	defaultBranch = main
[delta]
	navigate = true
	light = false
	line-numbers = true
	side-by-side = true
[interactive]
	diffFilter = delta --color-only
[diff]
	colorMoved = default
